{{#each this}}
<h2 class="country__name">{{name}}</h2>
<div class="country__info">
    <div class="right">
        <p class="country__capital"><span>Capital: </span>{{capital}}</p>
        <p class="country__population"><span>Population: </span>{{population}}</p>
        <ul class="country__languages"><span>Languages: </span>
            {{#each languages}}
            <li class="list__languages">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="left">
        <img src="{{flag}}" alt="{{name}}" class="country__flag" width="400" height="200">
    </div>
</div>
{{/each}}